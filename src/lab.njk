---
layout: 'layouts/layout.html'
title: 'Home'
---
<main id="main-content" tabindex="-1" x-data="costCalculator">
  <div class="mx-auto max-w-3xl">
    <h1 class="my-8 text-3xl font-bold leading-tight text-gray-900">
      Cost Calculator
    </h1>
  </div>
  <div class="mx-auto max-w-3xl">

    <div class="flex gap-8">
      <div class="w-full md:w-1/2">
        <h2 class="text-xl font-bold">Select program type</h2>
        <h2 x-text="programType" class="text-xl font-bold mt-8"></h2>

        <fieldset class="mt-8" x-show="$store.step == 'programType'" x-transition>

          <div class="relative -space-y-px rounded-md bg-white">
            <!-- Checked: "bg-indigo-50 border-indigo-200 z-10", Not Checked: "border-gray-200" -->
            <label class="rounded-tl-md rounded-tr-md relative border p-4 flex flex-col cursor-pointer md:pl-4 md:pr-6 md:grid md:grid-cols-2 focus:outline-none">
              <span class="flex items-center text-sm">
                <input type="radio" value="earlyChildhood" x-model="programType" class="h-4 w-4 text-indigo-600 border-gray-300 focus:ring-indigo-500">
                <!-- Checked: "text-indigo-900", Not Checked: "text-gray-900" -->
                <span class="ml-3 font-medium">Early Childhood</span>
              </span>
              <!-- Checked: "text-indigo-700", Not Checked: "text-gray-500" -->
              <span class="ml-6 pl-1 text-sm md:ml-0 md:pl-0 md:text-right">Up to 5 active job postings</span>
            </label>

            <label class="rounded-tl-md rounded-tr-md relative border p-4 flex flex-col cursor-pointer md:pl-4 md:pr-6 md:grid md:grid-cols-2 focus:outline-none">
              <span class="flex items-center text-sm">
                <input type="radio" name="pricing-plan" value="lowerMiddle" x-model="programType"  class="h-4 w-4 text-indigo-600 border-gray-300 focus:ring-indigo-500">
                <!-- Checked: "text-indigo-900", Not Checked: "text-gray-900" -->
                <span class="ml-3 font-medium">Lower School - Middle School</span>
              </span>
              <!-- Checked: "text-indigo-700", Not Checked: "text-gray-500" -->
              <span class="ml-6 pl-1 text-sm md:ml-0 md:pl-0 md:text-right">Up to 5 active job postings</span>
            </label>

            <label class="rounded-tl-md rounded-tr-md relative border p-4 flex flex-col cursor-pointer md:pl-4 md:pr-6 md:grid md:grid-cols-2 focus:outline-none">
              <span class="flex items-center text-sm">
                <input type="radio" value="highSchool" x-model="programType"  class="h-4 w-4 text-indigo-600 border-gray-300 focus:ring-indigo-500">
                <!-- Checked: "text-indigo-900", Not Checked: "text-gray-900" -->
                <span class="ml-3 font-medium">High School</span>
              </span>
              <!-- Checked: "text-indigo-700", Not Checked: "text-gray-500" -->
              <span class="ml-6 pl-1 text-sm md:ml-0 md:pl-0 md:text-right">Up to 5 active job postings</span>
            </label>

            <label class="rounded-tl-md rounded-tr-md relative border p-4 flex flex-col cursor-pointer md:pl-4 md:pr-6 md:grid md:grid-cols-2 focus:outline-none">
              <span class="flex items-center text-sm">
                <input type="radio" value="summerCamp" x-model="programType"  class="h-4 w-4 text-indigo-600 border-gray-300 focus:ring-indigo-500">
                <!-- Checked: "text-indigo-900", Not Checked: "text-gray-900" -->
                <span class="ml-3 font-medium">Summer Camp</span>
              </span>
              <!-- Checked: "text-indigo-700", Not Checked: "text-gray-500" -->
              <span class="ml-6 pl-1 text-sm md:ml-0 md:pl-0 md:text-right">Up to 5 active job postings</span>
            </label>

          </div>
        </fieldset>

        <fieldset class="mt-8" x-show="$store.step === 'earlyGradeLevel'" x-transition>

          <div class="relative -space-y-px rounded-md bg-white">
            <!-- Checked: "bg-indigo-50 border-indigo-200 z-10", Not Checked: "border-gray-200" -->
            <label class="rounded-tl-md rounded-tr-md relative border p-4 flex flex-col cursor-pointer md:pl-4 md:pr-6 md:grid md:grid-cols-2 focus:outline-none">
              <span class="flex items-center text-sm">
                <input type="radio" value="Startup" x-model="gradeLevel" class="h-4 w-4 text-indigo-600 border-gray-300 focus:ring-indigo-500">
                <!-- Checked: "text-indigo-900", Not Checked: "text-gray-900" -->
                <span class="ml-3 font-medium">PreK</span>
              </span>
              <!-- Checked: "text-indigo-700", Not Checked: "text-gray-500" -->
              <span class="ml-6 pl-1 text-sm md:ml-0 md:pl-0 md:text-right">Up to 5 active job postings</span>
            </label>

            <label class="rounded-tl-md rounded-tr-md relative border p-4 flex flex-col cursor-pointer md:pl-4 md:pr-6 md:grid md:grid-cols-2 focus:outline-none">
              <span class="flex items-center text-sm">
                <input type="radio" name="pricing-plan" value="Middle" x-model="gradeLevel"  class="h-4 w-4 text-indigo-600 border-gray-300 focus:ring-indigo-500">
                <!-- Checked: "text-indigo-900", Not Checked: "text-gray-900" -->
