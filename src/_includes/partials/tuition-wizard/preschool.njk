      <div class="flex items-center text-sm">
        <input type="radio" value="mTMornings" data-program="Preschool" @click="selectSchedule($event)" x-model="schedule" class="h-4 w-4 text-indigo-600 border-gray-300 focus:ring-indigo-500">
        <div class="w-full">
          <div class="flex w-full ml-3 ">
            <div class="w-3/5">Monday - Tuesday mornings</div>
            <div class="w-2/5 text-right text-gray-500">8:30am - 12:30pm</div>
          </div>
        </div>
      </div>
    </label>

