<fieldset class="mt-8" x-show="$store.step == 'preschool'" x-transition>
  <div class="flex mb-8">
    <button class="mr-auto" @click="$store.step = 'earlyChildhood'">&leftarrow; Back</button>
  </div>
  <div class="relative -space-y-px rounded-md bg-white">
    <h2 class="text-base bg-gray-500 text-white font-bold p-4">Preschool (2.5 - 4 yrs)</h2>
