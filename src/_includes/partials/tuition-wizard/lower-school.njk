<fieldset class="mt-8" x-show="$store.step == 'lowerSchool'" x-transition>
  <div class="flex mb-8">
    <button class="mr-auto" @click="$store.step = 'programType'">&leftarrow; Back</button>
  </div>
  <div class="relative -space-y-px rounded-md bg-white">
    <h2 class="text-base bg-gray-500 text-white font-bold p-4">Lower School - Middle School</h2>
    <label :class="schedule == $el.querySelector('input').value ? 'font-bold' : 'font-base'" class="relative border p-4 flex flex-col cursor-pointer md:pl-4 md:pr-6 focus:outline-none">
      <div class="flex items-center text-sm">
        <input type="radio" value="grades1To5" data-program="Lower School - Middle School" @click="selectSchedule($event)" x-model="schedule" class="h-4 w-4 text-indigo-600 border-gray-300 focus:ring-indigo-500">
        <div class="w-full">
          <div class="flex w-full ml-3 font-medium">
            <div class="w-3/5">Grades 1 - 5</div>
            <div class="w-2/5 text-right text-gray-500">&nbsp;</div>
          </div>
          <div class="flex w-full ml-3 text-xs">
            <div class="w-3/5">Monday - Friday</div>
            <div class="w-2/5 text-right text-gray-500">8:30am - 3:10pm</div>
          </div>
          <div class="flex w-full ml-3 text-xs">
            <div class="w-3/5">* Thursdays</div>
            <div class="w-2/5 text-right text-gray-500">8:30am - 2:00pm</div>
          </div>
        </div>
      </div>
    </label>

    <label :class="schedule == $el.querySelector('input').value ? 'font-bold' : 'font-base'" class="relative border p-4 flex flex-col cursor-pointer md:pl-4 md:pr-6 focus:outline-none">
      <div class="flex items-center text-sm">
        <input type="radio" value="grades6To8" data-program="Lower School - Middle School" @click="selectSchedule($event)" x-model="schedule" class="h-4 w-4 text-indigo-600 border-gray-300 focus:ring-indigo-500">
        <div class="w-full">
          <div class="flex w-full ml-3 font-medium">
            <div class="w-3/5">Grades 6 - 8</div>
            <div class="w-2/5 text-right text-gray-500">&nbsp;</div>
          </div>
          <div class="flex w-full ml-3 text-xs">
            <div class="w-3/5">Monday - Friday</div>
            <div class="w-2/5 text-right text-gray-500">8:30am - 3:10pm</div>
          </div>
          <div class="flex w-full ml-3 text-xs">
            <div class="w-3/5">* Thursdays</div>
            <div class="w-2/5 text-right text-gray-500">8:30am - 2:00pm</div>
          </div>
        </div>
      </div>
    </label>

    <label :class="schedule == $el.querySelector('input').value ? 'font-bold' : 'font-base'" class="relative border p-4 flex flex-col cursor-pointer md:pl-4 md:pr-6 focus:outline-none">
      <div class="flex items-center text-sm">
        <input type="radio" value="preschoolToGrade5" data-program="Lower School - Middle School" @click="selectSchedule($event)" x-model="schedule" class="h-4 w-4 text-indigo-600 border-gray-300 focus:ring-indigo-500">
        <div class="w-full">
          <div class="flex w-full ml-3 font-medium">
            <div class="w-3/5">Aftercare</div>
            <div class="w-2/5 text-right text-gray-500">&nbsp;</div>
          </div>
          <div class="flex w-full ml-3 text-xs">
            <div class="w-3/5">Preschool</div>
            <div class="w-2/5 text-right text-gray-500">3:00pm - 5:00pm</div>
          </div>
          <div class="flex w-full ml-3 text-xs">
            <div class="w-3/5">Grades 1 - 5</div>
            <div class="w-2/5 text-right text-gray-500">3:10pm - 5:00pm</div>
          </div>
        </div>
      </div>
    </label>



  </div>
</fieldset>